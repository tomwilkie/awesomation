#!/bin/bash

set -eu

PYLINT_DISABLE=import-error,locally-disabled,no-member,maybe-no-member,no-init,star-args,super-on-old-class,bare-except,no-self-use

#git stash -q --keep-index

git diff --cached --name-only | while read filename; do
	if [ ! -e "${filename}" ]; then
		continue
	fi

	ext=${filename##*\.}
	case "$ext" in
		py)
      /usr/local/bin/pylint --rcfile=.pylintrc -rno --disable=$PYLINT_DISABLE ${filename} | sort --key=2,5 -n
		;;
    js)
      /usr/local/bin/jshint ${filename}
    ;;
    html)
      java -jar ~/bin/vnu.jar ${filename}
      bootlint -d W002 ${filename}
    ;;
    css)
      csslint --ignore=adjoining-classes,box-model,ids,box-sizing,vendor-prefix,qualified-headings ${filename}
    ;;
	esac
done

#git stash pop -q
